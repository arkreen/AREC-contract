{
  "name": "arkreen-refi",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "lint:sol": "solhint -f table contracts/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "compile": "hardhat compile",
    "storage": "hardhat check",
    "flatten": "hardhat flatten",
    "clean": "hardhat clean",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:local:ARKE": "hardhat --network localhost deploy --tags ARKE",
    "deploy:local:gMiner": "hardhat --network localhost deploy --tags gMiner",
    "deploy:localhost:gMinerU": "hardhat --network localhost deploy --tags gMinerU",

    "deploy:goerli:ARKE": "hardhat --network goerli deploy --tags ARKE",
    "deploy:goerli:AMiner": "hardhat --network goerli deploy --tags AMiner",
    "deploy:goerli:AMinerU": "hardhat --network goerli deploy --tags AMinerU",
    "etherscan:goerli": "hardhat --network goerli etherscan-verify <--api-key>",
    "verify:goerli": "npx hardhat verify --network goerli <ADDRESS> <PARAMS>",

    "deploy:rinkeby:ARKE": "hardhat --network rinkeby deploy --tags ARKE",
    "deploy:rinkeby:gMiner": "hardhat --network rinkeby deploy --tags gMiner",
    "deploy:rinkeby:gMinerU": "hardhat --network rinkeby deploy --tags gMinerU",
    "verify:rinkeby": "npx hardhat verify --network rinkeby <ADDRESS> <PARAMS>",

    "deploy:matic_test:ARKE": "hardhat --network matic_test deploy --tags ARKE",
    "deploy:matic_test:gMiner": "hardhat --network matic_test deploy --tags gMiner",
    "deploy:matic_test:gMinerU": "hardhat --network matic_test deploy --tags gMinerU",
    "deploy:matic_test:AMiner": "hardhat --network matic_test deploy --tags AMiner",
    "deploy:matic_test:AMinerV10": "hardhat --network matic_test deploy --tags AMinerV10",
    "deploy:matic_test:AMinerUV10": "hardhat --network matic_test deploy --tags AMinerUV10",
    "deploy:matic_test:AMinerV10X": "hardhat --network matic_test deploy --tags AMinerV10X",
    "deploy:matic_test:AMinerUV10X": "hardhat --network matic_test deploy --tags AMinerUV10X",

    "deploy:matic_test:AMinerV10V": "hardhat --network matic_test deploy --tags AMinerV10V",
    "deploy:matic_test:AMinerUV10V": "hardhat --network matic_test deploy --tags AMinerUV10V",
    
    "deploy:matic_test:AMinerU": "hardhat --network matic_test deploy --tags AMinerU",
    "deploy:matic_test:gMinerU:reset": "npx hardhat --network matic_test deploy --reset --tags gMinerU",
    "deploy:matic_test:gRegistry": "hardhat --network matic_test deploy --tags gRegistry",
    "deploy:matic_test:gRegistryU": "hardhat --network matic_test deploy --tags gRegistryU",

    "deploy:matic_test:RECIssue": "hardhat --network matic_test deploy --tags RECIssue",
    "deploy:matic_test:RECIssueU": "hardhat --network matic_test deploy --tags RECIssueU",
    "deploy:matic_test:RECToken": "hardhat --network matic_test deploy --tags RECToken",
    "deploy:matic_test:RECRetire": "hardhat --network matic_test deploy --tags RECRetire",
    "deploy:matic_test:RECRetireU": "hardhat --network matic_test deploy --tags RECRetireU",
        
    "deploy:matic_test:gAKRE": "hardhat --network matic_test deploy --tags gAKRE",
    "deploy:matic_test:gAKREV2": "hardhat --network matic_test deploy --tags gAKREV2",
    "deploy:matic_test:gAKRE2U": "hardhat --network matic_test deploy --tags gAKRE2U",

    "deploy:matic_test:arkReward": "hardhat --network matic_test deploy --tags arkReward",
    "verify:matic_test": "npx hardhat verify --network matic_test <ADDRESS> <PARAMS>",

    "confirmAuto:matic_test": "npx hardhat run --network matic_test ./deploy/confirmIssuance.ts",
    
    "deploy:matic_test:all": "hardhat --network matic_test deploy",
    "etherscan:matic_test": "hardhat --network matic_test etherscan-verify <--api-key>",
    "deploy_ARKE_test": "hardhat run --network matic_test scripts/deployArkreenToken.ts",
    "deploy_ARKE_matic": "hardhat run --network matic scripts/deployArkreenToken.ts",
   
    "deploy:matic_test": "hardhat --network matic_test deploy --no-compile --reset --tags ARKE",
    "deploy:matic_test_all": "hardhat --network matic_test deploy",

    "deploy:matic:gAKRE": "hardhat --network matic deploy --tags gAKRE",
    "deploy:matic:arkReward": "hardhat --network matic deploy --tags arkReward",
    "deploy:matic:AMiner": "hardhat --network matic deploy --tags AMiner",
    "deploy:matic:gAKREV2": "hardhat --network matic deploy --tags gAKREV2",
    "deploy:matic:gAKRE2U": "hardhat --network matic deploy --tags gAKRE2U",

    "etherscan:matic": "hardhat --network matic etherscan-verify <--api-key>",

    "test": "hardhat test",
    "gas": "set REPORT_GAS=true && hardhat test",
    "coverage": "HARDHAT_DEPLOY_FIXTURE=true hardhat coverage",
    "typechain": "TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "fork": "hardhat node",
    "deploy:ARKE": "hardhat run scripts/01_deploy_ArkreenToken.ts",
    "deploy:ARKE1": "hardhat deploy --no-compile --reset --tag = ARKE",
    "deploy:matic": "hardhat --network matic deploy",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "deploy:ropsten": "hardhat --network ropsten deploy",
    "deploy:hardhat": "hardhat --network hardhat deploy",
    "sourcify:mainnet": "hardhat --network mainnet sourcify",
    "sourcify:rinkeby": "hardhat --network rinkeby sourcify",
    "etherscan:mainnet": "hardhat --network mainnet etherscan-verify",
    "etherscan:rinkeby": "hardhat --network rinkeby etherscan-verify",
    "prestart": "yarn run typechain",
    "start": "hardhat node --network hardhat"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.4",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.8",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.0",
    "hardhat": "^2.10.2",
    "hardhat-deploy": "^0.11.15",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-storage-layout": "^0.1.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
